<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/app_spacing_3dp" />
            <stroke android:width="1sp" android:color="@color/colorWhiteTransparent20" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/app_spacing_3dp" />
            <stroke android:width="1sp" android:color="@color/colorWhiteTransparent40" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/app_spacing_3dp" />
            <stroke android:width="1sp" android:color="@color/colorWhite" />
        </shape>
    </item>
</selector>